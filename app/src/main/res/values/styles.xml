<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary50</item>
    </style>

    <style name="AppTheme.Popup" parent="ThemeOverlay.AppCompat" />

    <!-- Other application styles. -->
    <style name="Display">
       <item name="android:textSize">36sp</item>
    </style>

    <style name="Label">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Label.Header">
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Label.Small" parent="Label">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
